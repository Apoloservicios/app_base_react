{
  "expo": {
    "name": "MiAppBase",
    "slug": "mi-app-base",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#007AFF",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta aplicación utiliza Face ID para autenticación biométrica.",
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para tomar fotos.",
        "NSLocationWhenInUseUsageDescription": "Esta aplicación necesita acceso a tu ubicación para funcionar correctamente."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "NOTIFICATIONS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.aptincho.miappbase"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-local-authentication",
      "expo-camera",
      "expo-location",
      [
        "expo-notifications",
        {
          "color": "#ffffff"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "bbc6808b-28d2-4eb7-92c8-bdd5a489556e"
      }
    }
  }
}
